_sshfs () 
{ 
    local cur userhost path;
    COMPREPLY=();
    _get_comp_words_by_ref -n : cur;
    _expand || return 0;
    if [[ "$cur" == *:* ]] && type _scp_remote_files &> /dev/null; then
        _scp_remote_files -d;
        COMPREPLY=("${COMPREPLY[@]//\\\\\\/\\}");
        return 0;
    fi;
    [[ "$cur" == */* ]] || _known_hosts_real -c -a "$cur";
    type _scp_local_files &> /dev/null && _scp_local_files -d;
    return 0
}
